<%= bi.time %> Weeks
</div>
<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 bid_budget padding_5">
<b><img src="/assets/money_icon.png" height="35" width="35">Total Budget:</b>
<%= bi.budget %> Rs.
</div>
<% end %> 

<% end %> 
</div>
</div>
  </div>  
</div>
</div>
</div>
  <script>

$(document).ready(function() {
    setTimeout(function(){
      $('.notice_wrapper').fadeOut("slow",function(){
        $(this).remove();
      })
    },2000);

});
function showInput() {
      var count = $("#user_input").val()
     
      $(".fields").each(function(){
        $(this).remove()
      })
      for (var i=1; i<=count; i++)
      {
        $(".add_nested_fields").click()
      }
  }
 $(window).load(function() {
  var hash = window.location.href;
  var hash1 = window.location.hash;
  if (hash1 == "#underbidding"){
      $("#tab1").show();    
  }
  else if(hash1 == "#working"){
  $("#tab2").show();
  }
  else if(hash == "http://localhost:3000/bids"){

$("#tab2").show();
 
    
  }
  else{

    $("#tab1").show();
 
  }

  });



$('#underbidding').click(function(e) {
 $("#tab1").show();
 $("#tab2").hide();
 var id = $(e.target).attr("href").substr(1);
  window.location.hash = id;


 });
$('#working').click(function(e) {
 $("#tab2").show();
 $("#tab1").hide();
 var id = $(e.target).attr("href").substr(1);
  window.location.hash = id;

 });

        
</script>
</div>
 	