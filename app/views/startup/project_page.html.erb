<div class="container" >
<div class="row"> 
  <div class="collapse" id="tab1" >
 
  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="margin-top: 20px;"> 

  <%= render(partial: '/projects/project_details',locals: {project: @project}) %> 
  </div>
  
</div>

<div id="tab2">
 <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 ">
  <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 add_pic hidden-xs hidden-sm" style="height: 500px;">

     </div> 
      <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 " style="margin-top: 20px;">
    

        <% if @bid_exist.count == 0 %>

<%= render(partial: '/bids/form',locals: {bid: @bid, project_id: @project.id, url: bids_path}) %>
<% else %>

<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 bid_company_name padding_20">
  <% @bid_exist.each do|be| %>
<%#= be.user.company_name %>
<% end %> 

</div>

<% @bid_installment.each do|bi| %>
