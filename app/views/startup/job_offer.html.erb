<div class="top_image1">

  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 outer_div">
    <div class="div_with_text" style="">
<h1 style="text-align: center; color: white;">  <%= current_user.company_name %></h1>
 <ul id="myTab">
      <li class="click_me1" id="underbidding"> <a href="#underbidding" style="text-decoration: none; color: black;">Selected Projects</a></li>
      &nbsp;&nbsp;
      <li  class="click_me1" id="working"><a href="#working" style="text-decoration: none; color: black;">Bidded Projects</a></li>
    </ul>
    </div>
    
  </div>
  
</div>
<div class="container">
  <div class="row"> 
  <div id="tab1">
 <div class="col-lg-1 col-md-1 col-sm-12 col-xs-12">
 </div>
  <div class="col-lg-10 col-md-10 col-sm-12 col-xs-12" >
   <% if @startups.count == 0 %>
   <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="text-align: center; height: 300px;">
  <h1>YOU DON'T HAVE ANY SELECTED PROJECTS</h1>
</div>
  <% else %>  
    <h1 style="text-align: center; margin-top: 10px;">SELECTED PROJECTS</h1>
  <% @startups.each do|startup| %>
<div class="thumbnail">
<%@temp=@projects.find(startup.project_id)%>
<%= render(partial: '/startup/form_job_offer',locals: {project: @temp}) %> 
</div>
<% end %>
 <% end %>

  
</div>
<div class="col-lg-1 col-md-1 col-sm-12 col-xs-12">
 </div>
</div>
<br>
<div class="row"> 
<div id="tab2">
    <div class="col-lg-1 col-md-1 col-sm-12 col-xs-12">
 </div>
    <div class="col-lg-10 col-md-10 col-sm-12 col-xs-12 ">
      <% if @project_available.count == 0 %>
   <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="text-align: center; height: 300px;">
  <h1>YOU DON'T HAVE ANY BIDDED PROJECTS</h1>
</div>
  <% else %>  
      <h1 style="text-align: center; margin-top: -10px;">BIDDED PROJECTS</h1> 
      <% @project_available.each do|startup| %>
      <div class="thumbnail">
<%= render(partial: '/startup/form_job_offer2',locals: {project: startup}) %> 
</div>
<% end %>
<% end %>
<% if @project_to_show.count == 0 %>
   <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="text-align: center;">
  
</div>
  <% else %> 
 <% @project_to_show.each do|startup| %>
      <div class="thumbnail">
<%= render(partial: '/startup/form_job_offer2',locals: {project: startup}) %> 
</div>
<% end %>
<% end %>
</div>
<div class="col-lg-1 col-md-1 col-sm-12 col-xs-12">
 </div>
 
</div>
</div>
	

</div>


<script>
$(document).ready(function() {
    setTimeout(function(){
      $('.notice_wrapper').fadeOut("slow",function(){
        $(this).remove();
      })
    },2000);
});
function showInput() {
      var count = $("#user_input").val()
     
      $(".fields").each(function(){
        $(this).remove()
      })
      for (var i=1; i<=count; i++)
      {
        $(".add_nested_fields").click()
      }
  }
  $(window).load(function() {
  var hash = window.location.href;
  var hash1 = window.location.hash;
  if (hash1 == "#underbidding"){
      $("#tab1").show();
      
}else if(hash1 == "#working"){
  $("#tab2").show();
   $("#tab1").hide();
 
 
  }
  else{
     $("#tab1").show();
  }
window.hash.reload();
  });

$('#underbidding').click(function(e) {
 $("#tab1").show();
 $("#tab2").hide();
 var id = $(e.target).attr("href").substr(1);
  window.location.hash = id;


 });
$('#working').click(function(e) {
 $("#tab2").show();
 $("#tab1").hide();
 var id = $(e.target).attr("href").substr(1);
  window.location.hash = id;

 });

</script>

     
	
 