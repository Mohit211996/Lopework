<div class="top_image1">

  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 outer_div">
    <div class="div_with_text" style="">
<h1 style="text-align: center; color: white;">  <%= current_user.company_name %></h1>
      <button class="click_me1" id="underbidding">Selected Projects</button>
      &nbsp;&nbsp;
      <button class="click_me1" id="working">Bidded Projects</button>
    </div>
    
  </div>
  
</div>
<div class="container">
  <div class="row"> 
  <div id="tab1">
 <div class="col-lg-1 col-md-1 col-sm-12 col-xs-12">
 </div>
  <div class="col-lg-10 col-md-10 col-sm-12 col-xs-12" > 
    <h1 style="text-align: center;">Selected Projects</h1>
  <% @startups.each do|startup| %>
<div class="thumbnail">
<%@temp=@projects.find(startup.project_id)%>
<%= render(partial: '/startup/form_job_offer',locals: {project: @temp}) %> 
</div>
<% end %>
 
  
</div>
<div class="col-lg-1 col-md-1 col-sm-12 col-xs-12">
 </div>
</div>
<br>
<div class="row"> 
<div id="tab2">
    <div class="col-lg-1 col-md-1 col-sm-12 col-xs-12">
 </div>
    <div class="col-lg-10 col-md-10 col-sm-12 col-xs-12 ">
      <h1 style="text-align: center; margin-top: 0px;">Bidded Projects</h1> 
      <% @project_available.each do|startup| %>
      <div class="thumbnail">
<%= render(partial: '/startup/form_job_offer2',locals: {project: startup}) %> 
</div>
<% end %>
 <% @project_to_show.each do|startup| %>
      <div class="thumbnail">
<%= render(partial: '/startup/form_job_offer2',locals: {project: startup}) %> 
</div>
<% end %>

</div>
<div class="col-lg-1 col-md-1 col-sm-12 col-xs-12">
 </div>
 
</div>
</div>
	

</div>


<script>
$(document).ready(function() {
    setTimeout(function(){
      $('.notice_wrapper').fadeOut("slow",function(){
        $(this).remove();
      })
    },2000);

    $("#underbidding").click(function(){
      $("#all").css("display","none");
      $("#tab1").css("display","block");

      $("#tab2").css("display","none");
    });

    $("#working").click(function(){
      $("#all").css("display","none");

      $("#tab1").css("display","none");
      $("#tab2").css("display","block");
    });
});
function showInput() {
      var count = $("#user_input").val()
     
      $(".fields").each(function(){
        $(this).remove()
      })
      for (var i=1; i<=count; i++)
      {
        $(".add_nested_fields").click()
      }
  }
  $(window).load(function() {
  $("#tab1").show();
 
});
</script>

     
	
 