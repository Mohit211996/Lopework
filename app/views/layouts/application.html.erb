<!DOCTYPE html>
<html>
  <head>
    <title>MyCompany</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application' %>
    <script src="https://cdn.ckeditor.com/4.9.0/standard/ckeditor.js"></script>
  </head>

  <body>
<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container-fluid">
    <div class="navbar-header" style="padding-left: 10px">
       <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>                        
      </button>
      <%= link_to root_path do %>
   <%= image_tag "3.png", class: "logo" %>
<% end %>
    </div>
    <ul class="nav navbar-nav list_nav">
      <% if user_signed_in? && current_user.role_id == 1 %>
    
      <li><%= link_to 'My Projects', startup_path  %></li>
      <li><%= link_to 'Notification', destroy_user_session_path %></li>
      <li><%= link_to 'Job Offers',job_offer_path %></li>
       <li><%= link_to 'Requests', startup_friends_path %></li>
        <li class="dropdown">
         <a class="dropdown-toggle" data-toggle="dropdown" href="#">Account<span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><%= link_to 'Account', startup_path %></li>
            <li><%= link_to 'Edit', edit_user_registration_path %></li>
            <li><%= link_to 'Log Out', destroy_user_session_path,method: :delete%></li>
          </ul>
</li>
<% elsif user_signed_in? && current_user.role_id == 2 %>
      <li><%= link_to 'Add Project', new_project_path %></li>
          <li><%= link_to 'Notification', destroy_user_session_path %></li>
           <li><%= link_to 'Connections', destroy_user_session_path %></li>
           <li><%= link_to 'History', destroy_user_session_path %></li>
           <li class="dropdown">
         <a class="dropdown-toggle" data-toggle="dropdown" href="#">Account<span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><%= link_to 'Account', client_path %></li>
            <li><%= link_to 'Edit', edit_user_registration_path %></li>
            <li><%= link_to 'Log Out', destroy_user_session_path,method: :delete%></li>
          </ul>
</li>
            
      <% else %>
      <li><a href="#">Home</a></li>
      <li><a href="#">About Us</a></li>
      <li><a href="#">Our Team</a></li>
    <li><%= link_to 'Sign In', sign_index_path%></li>
      <li><%= link_to 'Log In', new_user_session_path%></li>
      <% end %>
    </ul>
  </div>
</nav>



 
<div class="content">

  


    <div class="wrapper">


    <%= yield %>

 
</div>
</div>
       <script>
            $(document).ready(function(){
            $(window).on("scroll",function(){
            var wn = $(window).scrollTop();
            if(wn > 120){
            $(".navbar").css("background","rgba(255,255,255,0)");
            }
            else{
            $(".navbar").css("background","rgba(255,255,255,0)");
            }
             });
            });

            $(window).bind("load", function(){
              var wn = $(window).height();
              var ft = $('.footer').height();
              var h = $('.navbar').height();
              var calculate = wn - ft - h ;
              $(".wrapper").css("min-height",calculate);
            });

            window.onresize = resize;
function resize() {
   var wn = $(window).height();
              var ft = $('.footer').height();
              var h = $('.navbar').height();
              var calculate = wn - ft - h ;
              $(".wrapper").css("min-height",calculate);
}

          </script>

          
  </body>
</html>




