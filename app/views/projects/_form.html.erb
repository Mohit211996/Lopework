</div>
</div>

    <script type="text/javascript">
  
  $(document).ready(function(){
    $('#projects').validate({

      
    });

    $.validator.addMethod('positiveNumber',
          function (value) {
              return Number(value) > 0;
          }, 'Enter a positive number');

    $.validator.addMethod('limitNumber',
          function (value) {
              return Number(value) < 99999999999999;
          }, 'Enter a valid value');


  
    $("#name").rules("add",{
      required: true,
      minlength: 2,
      messages: {
        required: "Project name is mandatory",
        minlength: jQuery.validator.format("Please, at least {0} characters are necessary")
      }
    });
    $("#budget").rules("add",{
      required: true,
      minlength: 2,
      number: true,
      positiveNumber: true,
      messages: {
        required: "budget is mandatory",
        minlength: jQuery.validator.format("Please, at least {0} characters are necessary")
      }
    });
    $("#time").rules("add",{
      required: true,
      minlength: 2,
      number: true,
      positiveNumber: true,
      limitNumber: true,
      messages: {
        required: "time is mandatory",
        minlength: jQuery.validator.format("Please, at least {0} characters are necessary")
      }
    });
$("#ckeditor1").rules("add",{
      required: true,
      minlength: 400,
      messages: {
        required: "requirement is mandatory",
        minlength: jQuery.validator.format("Please, at least {0} characters are necessary")
      }
    });

    $("#technology_id").rules("add",{
      required: true,
      messages: {
        required: "Select atleast one"
      }
    });


  });

</script>